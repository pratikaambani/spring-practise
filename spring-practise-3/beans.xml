<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="init" default-destroy-method="destroy">

    <bean id="person" class="com.practise.spring.Person" scope="singleton" factory-method="getInstance" init-method="onCreate" destroy-method="onDestroy" >
        <constructor-arg value="101" type="int"></constructor-arg>
        <constructor-arg value="Pratik" type="java.lang.String"></constructor-arg>

        <property name="address" ref="addressreference"></property>
    </bean>

